//    "allowSyntheticDefaultImports": true,
//    "esModuleInterop": true,
//    "skipLibCheck": true,
//    "forceConsistentCasingInFileNames": true,
//    "declaration": true,
//    "declarationDir": "types",
//    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}